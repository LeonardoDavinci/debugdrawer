<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="Theme.U2020.Debug" parent="Theme.AppCompat.NoActionBar">
		<item name="colorAccent">@color/accent</item>
		<item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar</item>
	</style>

	<style name="Theme.U2020.External" parent="Theme.U2020">
		<item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar</item>
	</style>

	<style name="Widget.U2020.DebugDrawer.Header" parent="TextAppearance.AppCompat.Subhead.Inverse">
		<item name="android:paddingBottom">4dp</item>
		<item name="android:textColor">?android:attr/colorAccent</item>
		<item name="android:layout_marginTop">24dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

	<style name="Widget.U2020.DebugDrawer.RowWidget" parent="None">
		<item name="android:minHeight">48dp</item>
		<item name="android:layout_marginTop">4dp</item>
	</style>

	<style name="Widget.U2020.DebugDrawer.RowTitle" parent="Widget.U2020.DebugDrawer.RowWidget">
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
	</style>

	<style name="Widget.U2020.DebugDrawer.RowValue" parent="Widget.U2020.DebugDrawer.RowWidget">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
	</style>

	<style name="None">
	</style>

	<style name="Theme.U2020" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:textColorPrimary">@color/text_color_primary</item>
		<item name="android:textColorSecondary">@color/text_color_secondary</item>

		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowBackground">@color/content_background</item>

		<item name="colorAccent">@color/accent</item>
		<item name="colorPrimary">@color/accent</item>
		<item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar</item>
		<item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
	</style>
</resources>
